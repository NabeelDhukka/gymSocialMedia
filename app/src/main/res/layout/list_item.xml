<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/nameLi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:textColor="#eaeaea"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weightHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="Weight"
        android:textColor="#eaeaea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setRepHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="Sets/Reps"
        android:textColor="#eaeaea"
        app:layout_constraintEnd_toStartOf="@+id/weightHeader"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setRepValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="22dp"
        android:textColor="#cecece"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/setRepHeader"
        app:layout_constraintTop_toBottomOf="@+id/setRepHeader" />

    <TextView
        android:id="@+id/weightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="23dp"
        android:textColor="#cecece"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/weightHeader"
        app:layout_constraintTop_toBottomOf="@+id/weightHeader" />
</android.support.constraint.ConstraintLayout>