<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameLi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/weightHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/setRepHeader"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="4dp" />

    <TextView
        android:id="@+id/setRepHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:text="Sets/Reps"
        app:layout_constraintBaseline_toBaselineOf="@+id/weightHeader"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="80dp" />

    <TextView
        android:id="@+id/setRepValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/setRepHeader"
        app:layout_constraintStart_toStartOf="@+id/setRepHeader"
        app:layout_constraintTop_toBottomOf="@+id/setRepHeader" />

    <TextView
        android:id="@+id/weightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="23dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/weightHeader"
        app:layout_constraintTop_toBottomOf="@+id/weightHeader"
        android:layout_marginLeft="2dp" />
</android.support.constraint.ConstraintLayout>