<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/helloName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="28dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/setsRepsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/weightHeader"
        android:layout_toStartOf="@+id/weightHeader"
        android:text="Sets/Reps" />

    <TextView
        android:id="@+id/weightHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="Weight" />

    <TextView
        android:id="@+id/setRepListItemField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listItemName"
        android:layout_alignLeft="@+id/setsRepsHeader"
        android:layout_alignStart="@+id/setsRepsHeader" />

    <TextView
        android:id="@+id/weightListItemField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weightHeader"
        android:layout_alignStart="@+id/weightHeader"
        android:layout_alignTop="@+id/setRepListItemField" />


</RelativeLayout>