<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context="com.example.nabee.gymsocialmedia.excerciseLogging.exerciseForm$PlaceholderFragment"
    tools:layout_editor_absoluteY="25dp">

    <Spinner
        android:id="@+id/cardioList"
        android:layout_width="338dp"
        android:layout_height="0dp"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/rounded_entry_box"
        android:popupBackground="@drawable/rounded_entry_box"
        android:textColor="#dedede"
        android:textColorHint="#b5b5b5"
        app:layout_constraintBottom_toTopOf="@+id/cardioDist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addCardio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:background="@drawable/rounded_button"
        android:text="add"
        android:textColor="#eaeaea"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardioTime" />

    <EditText
        android:id="@+id/cardioDist"
        android:layout_width="283dp"
        android:layout_height="0dp"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/rounded_entry_box"
        android:ems="10"
        android:hint="dist(miles)"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#dedede"
        android:textColorHint="#b5b5b5"
        android:textColorLink="#354F52"
        app:layout_constraintBottom_toTopOf="@+id/cardioTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardioList" />

    <EditText
        android:id="@+id/cardioTime"
        android:layout_width="283dp"
        android:layout_height="0dp"
        android:layout_marginBottom="213dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/rounded_entry_box"
        android:ems="10"
        android:hint="time(mins)"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#dedede"
        android:textColorHint="#b5b5b5"
        android:textColorLink="#354F52"
        app:layout_constraintBottom_toTopOf="@+id/addCardio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardioDist" />

</android.support.constraint.ConstraintLayout>